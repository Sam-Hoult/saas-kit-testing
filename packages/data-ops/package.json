{
  "name": "@repo/data-ops",
  "version": "1.0.0",
  "description": "Manage auth, database, schemas, and queries",
  "exports": {
    "./auth/*": {
      "default": "./dist/auth/*.js",
      "types": "./dist/auth/*.d.ts"
    },
    "./database/*": {
      "default": "./dist/database/*.js",
      "types": "./dist/database/*.d.ts"
    },
    "./zod-schema/*": {
      "default": "./dist/zod-schema/*.js",
      "types": "./dist/zod-schema/*.d.ts"
    },
    "./queries/*": {
      "default": "./dist/queries/*.js",
      "types": "./dist/queries/*.d.ts"
    },
    "./kysely/*": {
      "default": "./dist/kysely/*.js",
      "types": "./dist/kysely/*.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json --outDir ./dist && tsc-alias",
    "kysely:migrate": "kysely migrate --config kysely.config.ts",
    "kysely:migrate:latest": "kysely migrate:latest --config kysely.config.ts",
    "kysely:migrate:down": "kysely migrate:down --config kysely.config.ts",
    "kysely:codegen": "kysely-codegen --out-file=src/kysely/types.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.14.0",
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "@planetscale/database": "^1.19.0",
    "@polar-sh/better-auth": "^1.1.0",
    "@polar-sh/sdk": "^0.34.13",
    "better-auth": "^1.3.7",
    "better-sqlite3": "^12.2.0",
    "kysely": "^0.28.8",
    "kysely-neon": "^2.0.2",
    "ws": "^8.18.3",
    "zod": "^4.1.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250823.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.9.2",
    "@types/ws": "^8.18.1",
    "better-sqlite#": "link:@types/better-sqlite#",
    "kysely-codegen": "^0.19.0",
    "kysely-ctl": "^0.19.0",
    "mysql2": "^3.14.3",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2"
  }
}
